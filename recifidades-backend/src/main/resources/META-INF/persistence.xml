<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3.0.xsd"
             version="3.0">

    <persistence-unit name="recificidades_java" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <class>model.person.person</class>
        <class>model.person.PJ</class>
        <class>model.person.PF</class>
        <class>model.events.Evento</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;instanceName=SQLEXPRESS;databaseName=recificidades_java" />
            <property name="jakarta.persistence.jdbc.user" value="andre" />
            <property name="jakarta.persistence.jdbc.password" value="276613" />
            <property name="eclipselink.ddl-generation" value="create-tables" />
            <property name="eclipselink.logging.level" value="FINE" />
            <property name="eclipselink.target-database" value="SQLServer" />
        </properties>
    </persistence-unit>
</persistence>
